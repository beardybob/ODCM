<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="ODCM_ClientPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>DataBase.Usage</class>
    <class>DataBase.LogCpu</class>
    <class>DataBase.Host</class>
    <class>DataBase.LogVcpu</class>
    <class>DataBase.VMs</class>
    <class>DataBase.VMUsage</class>
    <class>DataBase.Vmusage</class>
    <class>DataBase.Vms</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://192.168.2.3:3306/ODCM_DB"/>
      <property name="javax.persistence.jdbc.password" value="none"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.user" value="Client"/>
    </properties>
  </persistence-unit>
</persistence>
